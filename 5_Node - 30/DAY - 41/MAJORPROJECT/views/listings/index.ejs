<% layout("/layouts/boilerplate")%>

    <h3>All Listing</h3>
    <form method ="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %> " class="listing-link">
                <div class="card col" >
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing_image"  style ="height: 20rem ">     <!--  give all image same height to equall size -->
                    <div class="card-img-overlay"> </div>   <!--card-img-overlay => print text on image-->
                    <div class="card-body">
                        <p class="card-text"> 
                        <b> <%= listing.title %> </b> <br />
                            &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>