<% layout("/layouts/boilerplate")%>
    <div class="row mt-2">              <!-- mt-2 => margin top / a;ll content put in one div for center of then page -->
        <h1 class="col-6 offset-3">Login</h1> 
        <div class="col-6 offset-3">    <!-- offset => means from 12 box of grid left 2 div of starting-->
            <form action="/login" method="POST" class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input name ='username' id="username" type="text" class="form-control" required/>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input name ='password' id="password" type="password" class="form-control" required/>
                </div>
                <button class="btn btn-success">login</button>
            </form>
        </div>
            
    </div>